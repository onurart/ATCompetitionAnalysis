@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<style>


     form {
         /* COLORS */
         background: #FFFFFF;
         border: 1px solid #FFFFFF;
         box-sizing: border-box;
         box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
         border-radius: 17px;
         /* END COLORS*/
         width: 90%;
         max-width: 1000px;
         margin: auto;
         position: absolute;
         top: 20%;
         left: 50%;
         transform: translateX(-50%);
         display: flex;
         justify-content: flex-start;
         padding-top: 3rem;
         padding-right: 3rem;
         padding-bottom: 5rem;
         padding-left: 3rem;
     }

     label {
         font-style: normal;
         font-weight: normal;
         font-size: 24px;
         line-height: 28px;
     }

     input {
         display: block;
         width: 100%;
         height: 3em;
         background: #FFFFFF;
         border: 1px solid #FF9900;
         box-sizing: border-box;
         box-shadow: 0px 4px 4px rgba(255, 153, 0, 0.25);
         border-radius: 10px;
         padding: 1.25em 1em;
     }

     textarea {
         height: 100%;
         resize: none;
         background: #FFFFFF;
         border: 1px solid #FF9900;
         box-shadow: 0px 4px 4px rgba(255, 153, 0, 0.46);
         border-radius: 10px;
         padding: 10px;
     }

     input,
     textarea {
         outline: none;
         margin-top: 0.5em;
         font-size: 1em;
     }

         input:focus,
         textarea:focus {
             background-color: rgba(255, 153, 0, 0.1);
         }

     button {
         background: rgba(255, 153, 0, 0.84);
         border: 1px solid #FF9900;
         box-sizing: border-box;
         box-shadow: 0px 1px 4px rgba(255, 153, 0, 0.25);
         border-radius: 10px;
         color: white;
         padding: 10px 10px;
         outline: none;
         font-family: inherit;
         font-size: 16px;
         width: 50%;
     }

         button:hover {
             cursor: pointer;
             opacity: 0.7;
         }

     .container {
         display: flex;
     }

     .text-container {
         display: flex;
         flex-direction: column;
         order: 2;
         margin-left: 30px;
         width: 80%;
     }

     .input-container {
         display: flex;
         flex-direction: column;
         order: 1;
         width: 50%;
     }

     /* INPUT DIVS */
     .name-container,
     .email-container,
     .phone-container {
         margin-bottom: 20px;
     }

</style>

