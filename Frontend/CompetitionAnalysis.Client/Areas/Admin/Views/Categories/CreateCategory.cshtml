@using CompetitionAnalysis.Core.Features.CompanyFeatures.Categoies.Model
@model CreateCategory
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <!-- row -->
    <div class="container-fluid">

        <div class="row">

            <div class="card-body">
                <div class="table-responsive">
                    <div class="col-xl-6 col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="basic-form">
                                    <form method="post" asp-controller="Categories" asp-action="CreateCategory" class="my-3">

                                        <div class="form-group">
                                            <label asp-for="CategoryName">Kategori Adı</label>
                                            <input asp-for="CategoryName" name="CategoryName" class="form-control" placeholder="Kategori adı giriniz">
                                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                                        </div>
                                        <br />
                                        <button type="submit" class="btn btn-primary">Kategori Oluştur</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
