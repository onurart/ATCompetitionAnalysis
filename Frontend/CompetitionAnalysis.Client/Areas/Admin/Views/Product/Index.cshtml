@using CompetitionAnalysis.Core.Features.CompanyFeatures.Product.Model
@using DevExtreme.AspNet.Mvc

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">

        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="/Admin/Admin">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">ÜRÜN LİSTESİ</a></li>
            </ol>
        </div>
        <div class="">
            <a href="/Admin/ProductCreate"
                <button type="button" class="btn btn-danger w-20">
                    ÜRÜN EKLE <span class="btn-icon-end"><i class="fa fa-plus"></i></span>
                </button></a>
        </div>
        <br />
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            @(
                                Html.DevExtreme().DataGrid<ProductModel>()
                                .DataSource(d => d.Mvc()
                                .Controller("Admin")
                                .LoadAction("GetProductGrid")
                                .Key("Id"))
                                .ID("productId")
                                .ColumnChooser(cc => cc.Enabled(true).Mode(GridColumnChooserMode.Select))
                                .ColumnMinWidth(100)
                                .ColumnAutoWidth(true)
                                .ShowColumnLines(false)
                                .ShowRowLines(true)
                                .RowAlternationEnabled(true)
                                .ShowBorders(false)
                                .Paging(paging => paging.PageSize(9))
                                .Pager(pager =>
                                {
                                    pager.Visible(true);
                                    pager.DisplayMode(GridPagerDisplayMode.Full);
                                    pager.ShowPageSizeSelector(true);
                                    pager.AllowedPageSizes(new JS("[5, 10, 30, 70, 120,'all']"));
                                    pager.ShowInfo(true);
                                    pager.ShowNavigationButtons(true);
                                })
                                .Columns(columns =>
                                {
                                    @*  columns.Add().Caption("İŞLEM").CssClass("btnx btn-infox btn-smx")
                            .CellTemplate(@<text>
                            <input type="button" class="btnx btn-infox btn-smx" onclick="location.href='@Url.Action("", "")/<%= data.Id %>';" value="Detay" />
                            </text>);
                            *@
                                    columns.AddFor(m => m.Name).Caption("KATEGORİ ADI").CssClass("text-left text-uppercase");
                                    columns.AddFor(m => m.Price).Caption("ÜRÜN FİYATI").CssClass("text-left text-uppercase");
                                })
                                .FilterRow(f => f.Visible(true))
                                .HeaderFilter(f => f.Visible(true))
                                .Height(750)
                                .FocusedRowEnabled(true)
                                .FocusedRowKey(1)
                                .ElementAttr("class", "")
                                .Grouping(g => g.AutoExpandAll(false))
                                )

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Kategori Listesi</h4>
                    </div>
                    <div class="card-body">
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>